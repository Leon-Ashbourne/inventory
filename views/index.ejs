<html>
    <body>
        <h1><%= title %></h1>
        <div>
            <a href="/category">Categories</a>
        </div>
        <div>
            <a href="/create">Add game</a>
        </div>
        <main>
            <% if(games.length > 0) {%>
                <table>
                    <caption>
                        Online games
                    </caption>
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Title</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Rank</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%games.forEach((game) => {%>
                            <%- include("dataList", {game: game}) %>
                        <%})%>
                    </tbody>
                </table>
            <%} else {%>
                <h3>No data...</h3>
            <%}%>
        </main>
    </body>
</html>